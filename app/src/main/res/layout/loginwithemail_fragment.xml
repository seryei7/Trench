<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_splash">

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/email"
        android:drawableLeft="@drawable/ic_at_white_24dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:textColorHint="@android:color/white"
        android:backgroundTint="@color/signin"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
        android:hint="Password"
        android:paddingLeft="20dp"
        android:backgroundTint="@color/signin"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:layout_below="@+id/email"
        android:layout_marginTop="25dp" />
    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="40dp"
        android:background="@color/signin"
        android:text="Conectarse"
        android:textSize="20dp"
        android:padding="7dp"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/singup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="40dp"
        android:background="@color/colorPrimary"
        android:text="Registrarse"
        android:textSize="20dp"
        android:padding="7dp"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true" />
</RelativeLayout>