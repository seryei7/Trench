<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/fondo_splash">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Un jugador"
        android:id="@+id/un_jugador"
        android:textColor="@android:color/holo_green_dark"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/flag_menu"
        android:onClick="iniciarUnJugador"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/dos_jugadores"
        android:layout_alignStart="@+id/dos_jugadores" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dos jugadores"
        android:id="@+id/dos_jugadores"
        android:textColor="@color/goole"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/multiplayer"
        android:onClick="iniciarDosJugadores"
        android:layout_below="@+id/un_jugador"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajustes"
        android:id="@+id/ajustes"
        android:textColor="@color/signin"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/settings"
        android:onClick="iniciarAjustes"
        android:layout_below="@+id/dos_jugadores"
        android:layout_marginTop="31dp"
        android:layout_alignEnd="@+id/dos_jugadores"
        android:layout_alignStart="@+id/dos_jugadores" />
</RelativeLayout>