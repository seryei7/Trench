<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_splash"
    android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar sesion con Email"
        android:id="@+id/signinEmail"
        android:background="@color/grey_300"
        android:textColor="@android:color/white"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:drawableLeft="@drawable/email"
        android:layout_centerVertical="true"

        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar sesion con Google"
        android:id="@+id/signinGoogle"
        android:background="@color/goole"
        android:textColor="@android:color/white"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:layout_marginLeft="60dp"
        android:drawableLeft="@drawable/google"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/signinEmail"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/singup"
        android:id="@+id/tvsingup"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_dark"
        android:drawablePadding="8dp"
        android:paddingLeft="5dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/signinGoogle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />
</RelativeLayout>


